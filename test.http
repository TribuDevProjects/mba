###########################################################
# Pruebas de Seguridad y Errores
###########################################################

### Token invalido (debe dar 401)
POST {{host}}/mba/carlsjr/
Content-Type: application/json
Authorization: Bearer token_invalido

{
    "product": "WHOPPER JR"
}

### Sin token (debe dar 401)
POST {{host}}/mba/carlsjr/
Content-Type: application/json

{
    "product": "algo"
}

### Producto no encontrado (debe dar 404)
POST {{host}}/mba/carlsjr/
Content-Type: application/json
Authorization: Bearer {{token}}

{
    "product": "producto_que_no_existe_xyz123"
}
